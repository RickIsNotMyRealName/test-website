---
import Layout from '../layouts/Layout.astro';
import InnerHero from '../components/sections/InnerHero.astro';

const heroContent = {
    title: 'Gallery',
    description: 'A look at some of our work.',
    backgroundImage: import('../assets/images/home/default-hero.jpg'),
    overlayOpacity: 0.5,
};

const images = Array.from({ length: 9 }, (_, i) => ({
    src: `https://placehold.co/600x400?text=Photo+${i + 1}`,
    alt: `Gallery image ${i + 1}`,
}));
---

<Layout title="Gallery" description="Example gallery of our projects">
    <InnerHero content={heroContent} />
    <section class="site-container mx-auto px-4 py-base">
        <h2 class="sr-only">Project Photos</h2>
        <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-4">
            {
                images.map((image) => (
                    <img src={image.src} alt={image.alt} class="w-full h-auto rounded shadow" loading="lazy" />
                ))
            }
        </div>
    </section>
</Layout>
